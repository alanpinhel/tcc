<!DOCTYPE html>
<html lang="pt" id="requestShow">
<head>
  <%- include ../lib/meta %>
  <title>Presentes Ã  concorrer</title>
  <%- include ../lib/link %>
</head>
<body>
  <%- include ../lib/navbar %>
<main>
  <div class="container">
    <div class="row">
      <% for (var i = 0, len = raffles.length; i < len; i++) { %>
        <div class="col s12 m6 l4">
          <div class="card hoverable">
            <div class="card-image">
              <img src="<%= raffles[i].gift.photo %>">
            </div>
            <div class="card-content">
              <span class="card-title grey-text text-darken-4 truncate"><%= raffles[i].gift.title %></span>
              <p class="truncate">Patrocinador:&nbsp;<%= raffles[i].gift.owner.name %></p>
              <p class="truncate">Contato:&nbsp;<%= raffles[i].gift.owner.ident %></p>
              <p>Quantidade:&nbsp;<%= raffles[i].gift.amount %></p>
              <% if (raffles[i].active) {%>
                <p>Status: Ativo</p>
              <% } else {%>
                <p>Status: Finalizado</p>
              <% } %>
              <p>Ganhador:&nbsp;<%= raffles[i].earner.ident %></p>
            </div>
            <div class="card-action">
              <a class="blue-text" href="/gift/<%= raffles[i].gift._id %>">Detalhes</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>  
</main>
  <%- include ../lib/js %>